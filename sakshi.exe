#include<iostream>
using namespace std;
int main(){
    int i,j,k,l,n;
    cout<<"enter number";
    cin>>n;
    i=1;
    while(i<=n){
        j=1;
        while(j<=i){
            cout<<"* ";
            j++;
        }
        k=1;
        while(k<=2*(n-i)){
            cout<<" ";
            k++;
        }
        l=1;
        while(l<=i){
            cout<<"* ";
            l++;
        }
        cout<<"\n";
        i++;
    }
    i=n;
    while(i>=1){
        j=1;
        while(j<=i){
            cout<<"* ";
            j++;
        }
        k=1;
        while(k<=2*(n-i)){
            cout<<" ";
            k++;
        }
        l=1;
        while(l<=i){
            cout<<"* ";
            l++;
        }
        cout<<"\n";
        i--;
    }
}
